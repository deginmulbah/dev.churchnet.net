<% include ../../partials/header %>
<div class="wrapper">
<% include ../../partials/sidebar %>
<!-- **********  main-panel  ********** -->
<div class="main-panel">
    <div class="panel-hedding">
        <div class="mb-4">
            <a href="/admin/member/list"><i class="fa fa-arrow-left mr-2"></i>Individual</a>
        </div>
        <div class="row mb-4">
            <div class="col-md-6">
                <h1>Add An Individual</h1>
            </div>
        </div>
    </div>
    <div class="tab tab-outline">
        <ul class="nav" id="myTab-02" role="tablist">
            <li class="nav-item">
                 <a class="nav-link active" id="home-tab-02" data-toggle="tab" href="#home-02" role="tab" aria-controls="home" aria-selected="true">
                    Member</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab-02" data-toggle="tab" href="#profile-02" role="tab" aria-controls="profile" aria-selected="false">Visitor</a>
            </li>
       </ul>
       <div class="tab-content" id="myTabContent-02">
         <div class="tab-pane fade show active" id="home-02" role="tabpanel" aria-labelledby="home-tab-02"> 
             <div class="row">
                 <div class="col-12">
                    <form id="member_form" data-url="/admin/member/save_member">
                     <!-- **********personal info ********** -->
                     <div class="card">
                         <div class="card-body">
                                <div class="mb-4">
                                    <h5 class="card-title add-title"><i class="la la-user mr-3"></i>Personal</h5>
                                </div>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="firstname" class="mb-3">First Name<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                            <input type="text" class="form-control" id="firstname" name="fname">
                                            <span class="error"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="middlename">Middle Name<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                            <input type="text" class="form-control" id="middlename" name="mname">
                                        </div>
                                        <div class="form-group">
                                            <label for="lastname">Last Name<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                            <input type="text" class="form-control" id="lastname" name="lname">
                                            <span class="error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="gender" class="mb-3">Gender <span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                            <div class="custom-control custom-radio mb-3">
                                                <input type="radio" id="customRadio1" name="gender" class="custom-control-input" value="male">
                                                <label class="custom-control-label" for="customRadio1">Male</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" id="customRadio2" name="gender" class="custom-control-input" value="female">
                                                <label class="custom-control-label" for="customRadio2">Female</label>
                                            </div>
                                            <span class="gerror"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="user_avater" class="mb-3">Picture<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                            <div class="preview-zone d-none">
                                                <div class="box box-solid">
                                                    <div class="box-tools">
                                                        <p id="remove-preview">
                                                          <i class="fa fa-times"></i>
                                                        </p>
                                                    </div>
                                                  <div class="box-body"></div>
                                                </div>
                                              </div>
                                            <div>
                                                <p>File must be smaller than 5MB and either PNG or JPG/JPEG.</p>
                                            </div>
                                            <div class="dropzone-wrapper">
                                                <div class="dropzone-desc">
                                                  <i class="fa fa-upload"></i>
                                                  <p>Choose an image file or drag it here.</p>
                                                </div>
                                                <input type="file" name="user_avater" id="user_avater" class="dropzone" onchange="readFile(this)">
                                                <span class="error"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- **********	Date info ********** -->
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title add-title"><i class="la la-calendar mr-3"></i>Dates</h5>
                                 <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label for="dob">Birthdate <span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                         <div class="icon-input">
                                            <i class="fa fa-calendar"></i>
                                            <input type="text" class="form-control date-picker" name="dob" id="dob">
                                            <span class="error"></span>
                                         </div>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="databaptized">Date Baptized<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                        <div class="icon-input">
                                            <i class="fa fa-calendar"></i>
                                            <input type="text" class="form-control date-picker" name="databaptized" id="databaptized">
                                            <span class="error"></span>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="databaptized">Join Date <span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                        <div class="icon-input">
                                            <i class="fa fa-calendar"></i>
                                            <input type="text" class="form-control date-picker" name="joindate" id="joindate">
                                            <span class="error"></span>
                                        </div>
                                    </div>
                                 </div>
                            </div>
                        </div>
                        <!-- **********	contact info ********** -->
                        <div class="card">
                            <div class="card-body">
                                <div class="mb-4">
                                    <h5 class="card-title add-title"><i class="la la-phone mr-3"></i>Contact</h5>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="homephone">Cell phone number<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                            <input type="text" class="form-control" id="primaryphone" name="phone1" />
                                            <span class="error"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="cellphone">Home number<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                            <input type="text" class="form-control" id="secondarynumber" name="phone2"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="primaryemail">Personal email<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                            <input type="email" class="form-control" id="primaryemail" name="primaryemail" />
                                            <span class="error"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="secondaryemail">Work email<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                            <input type="email" class="form-control" id="secondaryemail" name="secondaryemail"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- **********	address info ********** -->
                        <div class="card">
                            <div class="card-body">
                                <div class="mb-4">
                                    <h5 class="card-title add-title"><i class="la la-map-marker mr-3"></i>Address</h5>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card-body">
                                        <div class="form-group">
                                            <label for="address">Address<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                            <input type="text" class="form-control" name="address" id="address" cols="10" rows="2"/>
                                        </div>
                                        <div class="form-group">
                                            <label for="city">City<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                            <input type="text" class="form-control" id="city" name="city" />
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="state">State<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                                <input type="text" class="form-control" id="state" name="state"/>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="country">Country<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                                <input type="text" class="form-control" id="country" name="country"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title add-title"><i class="la la-sitemap mr-3"></i>Groups</h5>
                                <div class="form-row">
                                    <div class="form-group col-md-7">
                                        <label for="group">Groups<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                        <select class="group" name="group" id="group" multiple="multiple">
                                            <option></option>
                                        </select>
                                    </div>
                                </div>
                         </div>
                     </div>
                    <div class="sticky-panel">
                        <button id="member_form_btn" type="submit" class="btn btn-primary mr-3">Save</button>
                        </div>
                </form>
                </div>
            </div>
        </div>
        <!-- visitor -->
        <div class="tab-pane fade" id="profile-02" role="tabpanel" aria-labelledby="profile-tab-02">
            <div class="card">
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="card-title add-title"><i class="la la-user mr-3"></i>Visitor</h5>
                    </div>
                    <form id="visitor_form">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="name" class="mb-3">Name<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                <input type="text" class="form-control" id="name" name="name">
                                <span class="error"></span>
                            </div>
                            <div class="form-group">
                                <label for="phone" class="mb-3">Phone Number<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                <input type="text" class="form-control" id="phone" name="phone">
                                <span class="error"></span>
                            </div>
                            <div class="form-group">
                                <label for="email">Email<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                <input type="email" class="form-control" id="email" name="email">
                                <span class="error"></span>
                            </div>
                            <div class="form-group">
                                <label for="address">Home Address<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optioinal </span></label>
                                <textarea class="form-control" name="address" id="address" cols="10" rows="2"></textarea>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="gender" class="mb-3">Gender<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                <div class="custom-control custom-radio mb-3">
                                    <input type="radio" id="male" name="gender" class="custom-control-input" value="male">
                                    <label class="custom-control-label" for="male">Male</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="female" name="gender" class="custom-control-input" value="female">
                                    <label class="custom-control-label" for="female">Female</label>
                                </div>
                                <span class="error mt-2" id="radioerr"></span>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="visit_date" class="mb-3">Date Visited<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                <input type="text" class="form-control date-picker" id="visit_date" name="visit_date">
                                <span class="error"></span>
                            </div>
                            <div class="form-group">
                                <label for="note">Note<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optioinal</span></label>
                                <textarea class="form-control" name="note" id="note" cols="10" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sticky-panel">
                <button type="submit" class="btn btn-primary mr-3" id="save_visitor">Save</button>
            </div>
        </form>
         </div>
        </div>
    </div>
</div>
