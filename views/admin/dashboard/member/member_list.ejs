<!-- giving modal -->
<div class="modal fade" id="addGiving" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered model-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Giving Entry</h5>
          <button type="button" class="btn close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body p-5">
        <form id="member_giving">
          <!-- member id -->
          <input type="hidden" name="id" id="member_id"/>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="category">Category<span class="text-danger ml-2" style="font-size:10px; font-style:italic;">require</span></label>
              <select class="form-control" id="category" name="category">
                <option value="building">Building</option>
                <option value="giving to the poor">giving to the poor</option>
              </select>
            </div>
             <div class="form-group col-md-6">
                <label for="date">Date <span class="text-danger ml-2" style="font-size:10px; font-style:italic;">require</span></label>
                 <div class="icon-input">
                    <i class="fa fa-calendar"></i>
                    <input type="text" class="form-control datepicker" name="date" id="date"/>
                    <span class="error"></span>
                 </div>
              </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="amount">Amount<span class="text-danger ml-2" style="font-size:10px; font-style:italic;">require</span></label>
              <div class="icon-input">
                  <i class="fa fa-dollar"></i>
                  <input type="number" class="form-control" name="amount" id="amount"/>
                  <span class="error"></span>
              </div>
            </div>
             <div class="form-group col-md-6">
               <label for="checkno">Check Number <span class="text-light" style="font-size:10px; font-style:italic;">optional</span></label>
                <input type="text" class="form-control" name="checkno" id="checkno"/>
              </div>
          </div>
          <div class="form-row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="note">Note<span class="text-light ml-2" style="font-size:10px; font-style:italic;">optional</span></label>
                <textarea class="form-control" id="note" name="note"></textarea>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary pull-right" id="saveGiving">Save</button>
        </form>
        </div>
      </div>
    </div>
  </div> 
<!-- send message -->
<div class="modal fade" id="sms-modal" tabindex="-1" role="dialog" aria-labelledby="sms-modal" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
	    <div class="modal-content ">
	      <div class="modal-header">
	        <h5 class="modal-title" id="sms-modal">Send Message</h5>
	        <button type="button" class="close  btn" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body p-5">
	      <form id="sendsms" action="/admin/sms/visitor_sms">
			  <div class="form-group">
			  	<label for="sendto">Send To:</label>
				<select class="form-control require" name="receiver" id="sendto">
            <option disabled selected>~select month~</option>
            <option value="1">January</option>
            <option value="2">February</option>
            <option value="3">March</option>
            <option value="4">April</option>
            <option value="5">May</option>
            <option value="6">June</option>
            <option value="7">July</option>
            <option value="8">August</option>
            <option value="9">September</option>
            <option value="10">October</option>
            <option value="11">November</option>
            <option value="12">December</option>
				</select>
			  </div>
			  <div class="form-group">
			    <label for="msg">Message:</label>
			    <textarea class="form-control require" name="msg" id="msg" cols="10" rows="5"></textarea>
			  </div>
			  <button type="submit" id="sendbtn" class="btn btn-primary pull-right">Send</button>
			</form>
	      </div>
	    </div>
	</div>
