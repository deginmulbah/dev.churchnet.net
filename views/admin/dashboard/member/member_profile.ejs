<% include ../../partials/header %>
<div class="wrapper">
  <% include ../../partials/sidebar %>
  <!-- **********  main-panel  ********** -->
  <div class="main-panel">
    <div class="panel-hedding">
      <div class="panel-hedding">
        <!-- <div class="mb-4">
            <a href="/admin/member/add"><i class="fa fa-arrow-left mr-2"></i>Add Individual</a>
        </div> -->
        <div class="row mb-4">
            <div class="col-md-6">
              <h5 class="text-capitalize"><%= member.firstname %> <%= member.middlename %> <%= member.lastname%></h5>
            </div>
        </div>
      </div>
    </div>
    <div class="tab tab-outline">
        <ul class="nav" id="myTab-02" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="home-tab-02" data-toggle="tab" href="#home-02" role="tab" aria-controls="home" aria-selected="true">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="profile-tab-02" data-toggle="tab" href="#profile-02" role="tab" aria-controls="profile" aria-selected="false">Edit</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="contact-tab-03" data-toggle="tab" href="#contact-02" role="tab" aria-controls="contact" aria-selected="false">Family</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" id="giving-tab-03" data-toggle="tab" href="#giving-02" role="tab" aria-controls="giving" aria-selected="false">Giving</a>
            </li>
      </ul>
      <div class="tab-content" id="myTabContent-02">
        <!-- profile -->
          <div class="tab-pane fade show active  mb-5" id="home-02" role="tabpanel" aria-labelledby="home-tab-02">
              <div class="row">
                  <div class="col-md-4">
                      <div class="card">
                        <div class="card-body">
                           <div class="personal-panel panel">
                             <!-- profile pic -->
                             <% if (member.avater) { -%>
                             <div class="avatar avatar-xll">
                                <img class="img-fluid" width="100px" height="200px" src="/uploads/<%= member.avater %>" alt="avater">
                              </div>
                             <% } else { -%>
                              <div class="avatar avatar-xll bg-light text-dark mb-3">
                                  <span class="avatar-name"><%= member.initial %></span>
                              </div> 
                              <% } -%>
                              <!-- member basic info -->
                               <div class="name">
                                  <h4><%= member.firstname %> <%= member.middlename %> <%= member.lastname %></h4>
                                  <sapn><%= member.gender %></sapn>
                                  <p class="mt-0">
                                    <% if (member.dates) { -%>
                                      <%= moment().diff(moment(member.dates.dob, "DD-MM-YYYY"), 'year'); %> yrs (<%= moment(member.dates.dob).format("MMM DD YYYY") %>)
                                    <% } -%>
                                  </p>
                                </div>
                           </div>
                           <hr />
                           <!-- icon -->
                           <div class="text-center icon">
                             <i class="fa fa-tint"></i>
                           </div>
                        </div>
                      </div>
                      <!-- contact info -->
                      <% if (member.contact) { %>
                        <div class="card">
                        <div class="card-body contact-panel">
                          <div class="panel-heading">Contact Info</div>
                            <% if (member.contact.primaryemail) { %>
                              <div class="info-details">
                                <div class="d-flex details">
                                  <div class="info">
                                    <p><i class="fa fa-envelope-open mr-2"></i>Email</p>
                                  </div>
                                  <div class="info">
                                    <p><%= member.contact.primaryemail %></p>
                                  </div>
                                </div>
                              </div>
                              <% } %>
                              <% if (member.contact.secondaryemail) { %>
                              <div class="info-details">
                                <div class="d-flex details">
                                  <div class="info">
                                    <p><i class="fa fa-envelope-open mr-2"></i>Secondary Email</p>
                                  </div>
                                  <div class="info">
                                    <p><%= member.contact.secondaryemail %></p>
                                  </div>
                                </div>
                              </div>
                              <% } %>
                              <% if (member.contact.primarynumber) { %>
                                <div class="info-details">
                                  <div class="d-flex details">
                                    <div class="info">
                                      <p><i class="fa fa-mobile-phone mr-2"></i>Phone <br/><span>(Home)</span></p>
                                    </div>
                                    <div class="info">
                                      <p><%= member.contact.primarynumber %></p>
                                    </div>
                                  </div>
                                </div>
                              <% } %>
                              <% if (member.contact.secondarynumber) { %>
                                <div class="info-details">
                                  <div class="d-flex details">
                                    <div class="info">
                                      <p><i class="fa fa-mobile-phone mr-2"></i>Phone <br/><span>(work)</span></p>
                                    </div>
                                    <div class="info">
                                      <p><%= member.contact.secondarynumber %></p>
                                    </div>
                                  </div>
                                </div>
                              <% } %>
                        </div>
                      </div>
                      <% } %>
                      <!-- address info -->
                      <% if (member.address) { %>
                      <div class="card">
                        <div class="card-body">
                          <div class="panel-heading">Address</div>
                              <div class="details">
                                <div class="info">
                                  <p><i class="fa fa-home mr-2"></i><%= member.address.address %></p>
                                </div>
                              </div>
                              <% if (member.address.city) { %>
                              <div class="info-details">
                                  <div class="d-flex details">
                                    <div class="info">
                                      <p class="text-capitalize"><i class="fa fa-building-o mr-2"></i>city:<br/></p>
                                    </div>
                                    <div class="info">
                                      <p><%= member.address.city %></p>
                                    </div>
                                  </div>
                              </div>
                            <% } %>
                            <% if (member.address.state) { %>
                              <div class="info-details">
                                  <div class="d-flex details">
                                    <div class="info">
                                      <p class="text-capitalize"><i class="fa fa-building mr-2"></i>State:<br/></p>
                                    </div>
                                    <div class="info">
                                      <p><%= member.address.state %></p>
                                    </div>
                                  </div>
                              </div>
                            <% } %>
                            <% if (member.address.country) { %>
                              <div class="info-details">
                                  <div class="d-flex details">
                                    <div class="info">
                                      <p class="text-capitalize"><i class="fa fa-flag mr-2"></i>country:<br/></p>
                                    </div>
                                    <div class="info">
                                      <p><%= member.address.country %></p>
                                    </div>
                                  </div>
                              </div>
                            <% } %>
                        </div>
                      </div>
                      <% } %>
                      <!-- Date info -->
                      <% if (member.dates) { %>
                      <div class="card">
                        <div class="card-body">
                          <div class="panel-heading">Dates</div>
                          <% if (member.dates.dob) { %>
                            <div class="info-details">
                              <div class="d-flex details">
                                 <div class="info">
                                    <p><i class="fa fa-birthday-cake mr-2"></i>Birthdate</p>
                                 </div>
                                 <div class="info">
                                    <p><%= moment(member.dates.dob).format("MMM DD YYYY") %><span class="ml-2">(<%= moment().diff(moment(member.dates.dob, "DD-MM-YYYY"), 'year'); %> yrs)</span></p>
                                 </div>
                              </div>
                            </div>
                          <% } %>
                          <% if (member.dates.date_bapts) { %>
                            <div class="info-details">
                              <div class="d-flex details">
                                 <div class="info">
                                    <p><i class="fa fa-tint mr-2"></i>Baptized On</p>
                                 </div>
                                 <div class="info">
                                    <p><%= moment(member.dates.date_bapts).format("MMM DD YYYY") %></p>
                                 </div>
                              </div>
                            </div>
                          <% } %>
                          <% if (member.dates.joined_date) { %>
                            <div class="info-details">
                              <div class="d-flex details">
                                 <div class="info">
                                    <p><i class="fa fa-calendar-check-o mr-2"></i>Join Date</p>
                                 </div>
                                 <div class="info">
                                    <p><%= moment(member.dates.joined_date).format("MMM DD YYYY") %></p>
                                 </div>
                              </div>
                            </div>
                          <% } %>
                        </div>
                      </div>
                    <% } %>
                  </div>
                  <div class="col-md-8">
                  <% if (member.family.length) { %>
                  <div class="card">
                    <div class="card-body">
                         <div class="panel-heading">Family</div>
                           <div class="row">
                            <% for (var i = 0; i < family.length; i++) { %>
                              <div class="col-md-6">
                                <div class="row">
                                  <div class="col-4">
                                    <div class="userprofile">Jm</div>
                                  </div>
                                  <div class="col-8">
                                    <div class="mt-4">
                                      <p style="padding-bottom:0px;">Primary
                                        <br><span><a href="#"><%= family[i].firstname %> Mulbah</a></span>
                                      </p>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            <% } %>
                           </div>
                      </div>
                    </div>
                    <% } %>
                    <% if (group.length) { -%>
                      <div class="card">
                        <div class="card-body">
                           <div class="panel-heading">Groups</div>
                           <ul class="list-group">
                             <% for (var i = 0; i < group.length; i++) { -%>
                                 <li class="d-flex justify-content-between align-items-center">
                                  <h5>
                                    <a href="/admin/group/group_details/<%= group[i].group_info._id %>">
                                     <%= group[i].group_info.group_name %>
                                   </a>
                                  </h5>
                                    <!-- <span class="badge badge-primary badge-pill">14</span> -->
                                </li>
                             <% } -%>
                           </ul>  
                        </div>
                      </div>
                    <% } -%>
                      <div class="card">
                          <div class="card-body">
                           <div class="panel-heading">Documents</div>
                            
                          </div>
                        </div>
                  </div>
              </div>
          </div>
        <!-- profile //-->
        <!-- edit profile -->
          <div class="tab-pane fade mb-5" id="profile-02" role="tabpanel" aria-labelledby="profile-tab-02">
              <div class="row">
                  <div class="col-12">
                    <form id="member_form" data-url="/admin/member/update_member">
                          <!-- **********	personal info ********** -->
                          <input type="hidden" value="<%=member._id%>" name="id" id="member_id"/>
                          <div class="card">
                              <div class="card-body">
                                  <div class="mb-4">
                                      <h5 class="card-title add-title"><i class="la la-user mr-3"></i>Personal</h5>
                                  </div>
                                  <div class="row">
                                      <div class="col-md-5">
                                          <div class="form-group">
                                              <label for="firstname" class="mb-3">First Name
                                                <span class="text-danger" style="font-size:10px; font-style:italic;">require</span>
                                              </label>
                                              <input type="text" class="form-control" id="firstname" name="fname" value="<%= member.firstname%>">
                                               <span class="error"></span>
                                          </div>
                                          <div class="form-group">
                                              <label for="middlename">Middle Name
                                              <span class="text-light" style="font-size:10px; font-style:italic;">optional</span>
                                              </label>
                                              <input type="text" class="form-control" id="middlename" name="mname" value="<%= member.middlename %>">
                                          </div>
                                          <div class="form-group">
                                              <label for="lastname">Last Name
                                               <span class="text-danger" style="font-size:10px; font-style:italic;">require</span>
                                              </label>
                                              <input type="text" class="form-control" id="lastname" name="lname" value="<%= member.lastname %>">
                                               <span class="error"></span>
                                          </div>
                                      </div>
                                      <div class="col-md-2">
                                          <div class="form-group">
                                              <label for="gender" class="mb-3">Gender <span class="text-danger" style="font-size:10px; font-style:italic;">require</span></label>
                                                <div class="custom-control custom-radio mb-3">
                                                <input type="radio" id="customRadio1" name="gender" class="custom-control-input" <%= (member.gender === "male" ) ? 'checked':''%> value="<%= member.gender %>">
                                                  <label class="custom-control-label" for="customRadio1">Male</label>
                                                </div>
                                                <div class="custom-control custom-radio">
                                                  <input type="radio" id="customRadio2" name="gender" class="custom-control-input"  <%= (member.gender === "female" ) ? 'checked':''%> value="<%= member.gender %>">
                                                  <label class="custom-control-label" for="customRadio2">Female</label>
                                                </div>
                                          </div>
                                      </div>
                                      <div class="col-md-5">
                                          <div class="form-group">
                                              <label for="gender" class="mb-3">Picture <span class="text-light" style="font-size:10px; font-style:italic;">optional</span></label>
                                              <div class="preview-zone d-none">
                                                  <div class="box box-solid">
                                                      <div class="box-tools">
                                                          <p id="remove-preview">
                                                            <i class="fa fa-times"></i>
                                                          </p>
                                                      </div>
                                                    <div class="box-body"></div>
                                                  </div>
                                                </div>
                                              <div>
                                                  <p>File must be smaller than 5MB and either PNG or JPG/JPEG.</p>
                                              </div>
                                              <div class="dropzone-wrapper">
                                                  <div class="dropzone-desc">
                                                    <i class="fa fa-upload"></i>
                                                    <p>Choose an image file or drag it here.</p>
                                                  </div>
                                                  <input type="file" name="user_avater" class="dropzone" onchange="readFile(this)">
                                              </div>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                          </div>
                          <!-- **********	Date info ********** -->
                          <div class="card">
                              <div class="card-body">
                                  <h5 class="card-title add-title"><i class="la la-calendar mr-3"></i>Dates</h5>
                                   <div class="form-row">
                                      <div class="form-group col-md-3">
                                          <label for="dob">Birthdate <span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                           <div class="icon-input">
                                              <i class="fa fa-calendar"></i>
                                              <input type="text" class="form-control date-picker" name="dob" id="dob" value="<%= moment(member.dates.dob).format("l") %>">
                                              <span class="error"> </span>
                                           </div>
                                      </div>
                                      <div class="form-group col-md-3">
                                          <label for="databaptized">Date Baptized<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                          <div class="icon-input">
                                              <i class="fa fa-calendar"></i>
      <input type="text" class="form-control date-picker" name="databaptized" id="databaptized" 
      value="<%= (member.dates.date_bapts) ? moment(member.dates.date_bapts).format("l") : "" %>">
                                              <span class="error"> </span>
                                          </div>
                                      </div>
                                      <div class="form-group col-md-3">
                                          <label for="databaptized">Join Date<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                          <div class="icon-input">
                                              <i class="fa fa-calendar"></i>
                                              <input type="text" class="form-control date-picker" name="joindate" id="joindate" value="<%= member.dates.joined_date %>">
                                              <span class="error"> </span>
                                          </div>
                                      </div>
                                   </div>
                              </div>
                          </div>
                          <!-- **********	contact info ********** -->
                          <div class="card">
                              <div class="card-body">
                                  <div class="mb-4">
                                      <h5 class="card-title add-title"><i class="la la-phone mr-3"></i>Contact</h5>
                                  </div>
                                  <div class="row">
                                      <div class="col-md-4">
                                          <div class="form-group">
                                              <label for="homephone">Cell Phone <span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                              <input type="text" class="form-control" id="homephone" name="phone1" value="<%= member.contact.primarynumber %>"/>
                                              <span class="error"> </span>
                                          </div>
                                          <div class="form-group">
                                              <label for="cellphone">Home Phone <span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                              <input type="text" class="form-control" id="cellphone" name="phone2" value="<%= member.contact.secondarynumber %>"/>
                                              <span class="error"> </span>
                                          </div>
                                      </div>
                                      <div class="col-md-6">
                                          <div class="form-group">
                                            <label for="primaryemail">Personal Email <span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                            <input type="email" class="form-control" id="primaryemail" name="primaryemail" value="<%= member.contact.primaryemail %>">
                                            <span class="error"> </span>
                                          </div>
                                          <div class="form-group">
                                            <label for="secondaryemail">Work Email <span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                            <input type="email" class="form-control" id="secondaryemail" name="secondaryemail" value="<%= member.contact.secondaryemail %>">
                                          </div>
                                      </div>
                                  </div>
                              </div>
                          </div>
                          <!-- **********	address info ********** -->
                          <div class="card">
                              <div class="card-body">
                                  <div class="mb-4">
                                      <h5 class="card-title add-title"><i class="la la-map-marker mr-3"></i>Address</h5>
                                  </div>
                                  <div class="row">
                                    <div class="col-md-6">
                                      <div class="card-body">
                                          <div class="form-group">
                                              <label for="address">Address<span class="text-danger ml-1" style="font-size:10px; font-style:italic;">require</span></label>
                                              <input type="text" class="form-control" name="address" id="address" value="<%= member.address.address%>">
                                              <span class="error"> </span>
                                          </div>
                                          <div class="form-group">
                                              <label for="city">City<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                              <input type="text" class="form-control" id="city" name="city" value="<%= member.address.city %>">
                                          </div>
                                          <div class="form-row">
                                              <div class="form-group col-md-6">
                                                  <label for="state">State<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                                  <input type="text" class="form-control" id="state" name="state" value="<%= member.address.state %>">
                                              </div>
                                              <div class="form-group col-md-6">
                                                  <label for="country">Country<span class="text-light ml-1" style="font-size:10px; font-style:italic;">optional</span></label>
                                                  <input type="text" class="form-control" id="country" name="country" value="<%= member.address.country %>">
                                              </div>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                              </div>
                          </div>
                          <div class="card">
                              <div class="card-body">
                                  <h5 class="card-title add-title"><i class="la la-sitemap mr-3"></i>Groups</h5>
                                  <!-- group tab -->
                                    <div class="tab tab-outline">
                                       <ul class="nav" id="myTab-02" role="tablist">
                                        <li class="nav-item">
                                          <a class="nav-link active" id="group_exist_1" data-toggle="tab" href="#group_exist" role="tab" aria-controls="home" aria-selected="true">
                                              Existing</a>
                                        </li>
                                        <li class="nav-item">
                                          <a class="nav-link" id="add_group_1" data-toggle="tab" href="#add_group" role="tab" aria-controls="profile" aria-selected="false">Add</a>
                                        </li>
                                      </ul>
                                      <div class="tab-content" id="myTabContent-02">
                                        <div class="tab-pane fade show active" id="group_exist" role="tabpanel" aria-labelledby="group_exist_1">
                                          <input type="hidden" id="member_id" name="member_id" value="<%= member._id %>">
                                          <% if (!group.length) { %>
                                             <p>No group existing</p>
                                          <% } %>
                                          <ul class="list-group" id="member-group">
                                           <% for (var i = 0; i < group.length; i++) { -%>
                                               <li id="group" class="d-flex justify-content-between align-items-center list-item">
                                                <h5>
                                                  <a href="/admin/group/group_details/<%= group[i].group_info._id %>">
                                                   <%= group[i].group_info.group_name %>
                                                  </a>
                                                </h5>
                                                  <span title="remove group" data-id="<%= group[i].group_info._id %>" class="remove"><i class="fa fa-times"></i></span>
                                              </li>
                                           <% } -%>
                                          </ul> 
                                        </div>
                                        <div class="tab-pane fade" id="add_group" role="tabpanel" aria-labelledby="add_group_1">
                                          <div class="form-group col-md-7">
                                            <label for="group">Add member to group</label>
                                            <select class="group" id="member_group" name="group" multiple="multiple"></select>
                                          </div>
                                          <div>
                                            <a href="javascript:void(0)" id="add_to_group" class="btn btn-primary">Add</a>
                                          </div>
                                        </div>
                                      </div>
                                  </div>
                                  <!-- group tab -->
                              </div>
                          </div>
                          <div class="sticky-panel">
                            <button type="submit" class="btn btn-primary mr-3">Save</button>
                          </div>
                        </form>
                   </div>
              </div>
          </div>
        <!-- edit profile //-->
        <!-- family  -->
          <div class="tab-pane fade" id="contact-02" role="tabpanel" aria-labelledby="contact-tab-02">
            <div class="card">
              <div class="card-body">
                <p class="">
                    Add 
                    <a href="/admin/member/member_profile/<%= member._id %>"><%= member.firstname%>'s</a> family members.
                </p>
                <form action="/admin/member/add_family" method="POST">
                  <div class="row">
                    <!-- member id -->
                    <input type="hidden" name="member_id" value="<%= member._id %>">
                    <div class="col-md-6 form_sec_outer_task">
                      <div class="row">
                        <div class="col-md-6">
                           <label>choose family member</label>
                        </div>
                        <div class="col-md-4">
                           <label>select relationship</label>
                        </div>
                      </div>
                      <div class="col-md-12 p-0">
                        <div class="col-md-12 form_field_outer p-0">
                          <div class="row form_field_outer_row">
                            <div class="form-group col-md-6">
                              <select name="fam" id="fam" class="form-control search-member"></select>
                            </div>
                            <div class="form-group col-md-4">
                              <select name="fam_rel" id="fam_rel" class="form-control">
                                  <option>Father</option>
                                  <option>Mother</option>
                                  <option>Husban</option>
                                  <option>Wife</option>
                                  <option>Son</option>
                                  <option>Duther</option>
                                  <option>Brother</option>
                                  <option>Sister</option>
                              </select>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <div class="ml-0 mt-3 py-3">
                  <button type="submit" class="btn btn-primary">Add</button>
                </div>
              </form>
              </div>
            </div>
          </div>
        <!-- family  //-->
        <!-- giving  -->
        <div class="tab-pane fade" id="giving-02" role="tabpanel" aria-labelledby="giving-tab-02">
