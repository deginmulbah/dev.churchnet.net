<% include ../../partials/header %>
<div class="wrapper">
<% include ../../partials/sidebar %>

<!--  -->
<div class="main-panel">
	<div class="panel-hedding">
            <div class="mb-4">
                <a href="/admin/group/list"><i class="fa fa-arrow-left mr-2"></i>Giving</a>
            </div>
            <div class="row mb-4">
                <div class="col-md-6">
                    <h1>Add Giving</h1>
                </div>
            </div>
        </div> 
		<div class="tab tab-outline">
			<ul class="nav" id="myTab-02" role="tablist">
				<li class="nav-item">
					<a class="nav-link active" id="home-tab-02" data-toggle="tab" href="#home-02" role="tab" aria-controls="home" aria-selected="true">Add</a>
				</li>
		   </ul>
		   <div class="tab-content" id="myTabContent-02">
			 <div class="tab-pane fade show active" id="home-02" role="tabpanel" aria-labelledby="home-tab-02">
			 	<div class="row">
				<div class="card">
					<div class="card-body">
					 <form id="group">
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="groupname" class="mb-3">Member<span class="text-danger"></span></label>
									<input type="text" class="form-control require" id="groupname" name="groupname">
									<span class="error"></span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="meetingday">Category</label>
									<select class="form-control" id="category" name="category"> 
										<option value="monday">Monday</option>
										<option value="tuesday">Tuesday</option>
										<option value="wednesday">Wednesday</option>
										<option value="thursday">Thursday</option>
										<option value="friday">Friday</option>
										<option value="saturday">Saturday</option>
										<option value="sunday">Sunday</option>
									</select>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="amonunt">Amount</label>
									<input type="number" class="form-control" name="amount" id="amonunt">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="date">Date</label>
									<input type="text" class="form-control date-picker " name="date" id="date">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="groupdesc">Note</label>
									<textarea id="groupdesc" name="groupdesc" class="form-control" cols="3" rows="3"></textarea>
								</div>
							</div>
						</div>
						<div>
							<button type="submit" class="btn btn-primary">Add</button>
						</div>
					</div>
				</div>
				  </form>
				</div>
			</div>
		</div>
	</div>
</div>
