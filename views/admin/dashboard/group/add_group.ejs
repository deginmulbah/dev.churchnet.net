<div class="wrapper">
<% include ../../partials/sidebar %>
<style>
    .CodeMirror{
        min-height: 100px!important;
    }
</style>
<div class="main-panel">
	<div class="panel-hedding">
            <div class="mb-4">
                <a href="/admin/group/list"><i class="fa fa-arrow-left mr-2"></i>Groups</a>
            </div>
            <div class="row mb-4">
                <div class="col-md-6">
                    <h1>Add Groups</h1>
                </div>
            </div>
        </div>
		<div class="tab tab-outline">
			<ul class="nav" id="myTab-02" role="tablist">
				<li class="nav-item">
					<a class="nav-link active" id="home-tab-02" data-toggle="tab" href="#home-02" role="tab" aria-controls="home" aria-selected="true">Add</a>
				</li>
		   </ul>
		   <div class="tab-content" id="myTabContent-02">
			 <div class="tab-pane fade show active" id="home-02" role="tabpanel" aria-labelledby="home-tab-02">
				<div class="card">
					<div class="card-body">
					 <form id="group">
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="groupname" class="mb-3">Name<span class="text-danger">*</span></label>
									<input type="text" class="form-control require" id="groupname" name="groupname">
									<span class="error"></span>
								</div>
								<div class="form-group">
									<label for="groupleader">Choose Leader(s)<span class="text-danger">*</span></label>
									<select class="form-control require" id="group_leader" multiple="multiple" name="groupleaders"></select>
									<span class="error"></span>
								</div>
								<div class="form-row">
									<div class="form-group col-12" name="mee">
										<label for="meetingday">Meeting Day</label>
										<select class="form-control" id="meetingday" name="meetingdays" multiple="multiple"> 
											<option value="Monday">Monday</option>
											<option value="Tuesday">Tuesday</option>
											<option value="Tuesday">Wednesday</option>
											<option value="Tuesday">Thursday</option>
											<option value="Tuesday">Friday</option>
											<option value="Tuesday">Saturday</option>
											<option value="Tuesday">Sunday</option>
										</select>
									</div>
								</div>
						       <div class="form-row">
									<div class="form-group col-12">
										<label for="meetingtime">Time</label>
										<input type="text" class="form-control" name="meetingtime" id="meetingtime">
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label for="groupdesc">Description</label>
									<textarea id="editor-demo1" name="groupdesc" cols="3" rows="3"></textarea>
								</div>
							</div>
						</div>
						<div>
							<button type="submit" class="btn btn-primary">Add</button>
						</div>
					</div>
				  </form>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
