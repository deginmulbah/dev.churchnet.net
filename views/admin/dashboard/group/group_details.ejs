<!--Edit group leader Modal -->
<div class="modal fade" id="exampleModal-02" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog modal-dialog-centered" role="document">
	<div class="modal-content">
	    <div class="modal-header">
	        <h5 class="modal-title" id="exampleModalLabel">Select Group Leader(s)</h5>
	        <button type="button" class="btn close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	     </div>
	     <form method="post" action="/admin/group/add_group_leader">
	      <div class="modal-body p-5">
		  		<input type="hidden" name="group_id" id="group_id" value="<%= info._id %>">
				<div class="form-group">
				    <label for="username">Choose Leader</label>
				    <select class="form-control" name="leaders[]" multiple="multiple" id="choose_leader"></select>
				</div>
	      </div>
	      <div class="modal-footer">
        	<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        	<button type="submit" class="btn btn-primary">Save</button>
      	  </div>
		</form>
	 </div>
	</div>
</div> 
<!-- add group member Modal -->
<div class="modal fade" id="addgroupmenber" tabindex="-1" role="dialog" aria-labelledby="addgroupmenber" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
	<div class="modal-content">
	    <div class="modal-header">
	        <h5 class="modal-title" id="addgroupmenber">Select Group Member(s)</h5>
	        <button type="button" class="btn close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	     </div>
	     <form method="post" action="/admin/group/add_group_member">
	      <div class="modal-body p-5">
		  		<input type="hidden" name="group_id" id="group_id" value="<%= info._id %>">
				<div class="form-group">
				    <label for="username">Select Members</label>
				    <select class="form-control search-member" name="members[]" multiple="multiple" id="select-member"></select>
				</div>
	      </div>
	      <div class="modal-footer">
        	<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        	<button type="submit" class="btn btn-primary">Save</button>
      	  </div>
		</form>
	 </div>
	</div>
</div>
<!-- send message -->
<div class="modal fade" id="sms-modal" tabindex="-1" role="dialog" aria-labelledby="sms-modal" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
	    <div class="modal-content ">
	      <div class="modal-header">
	        <h5 class="modal-title" id="sms-modal">Send Message</h5>
	        <button type="button" class="close  btn" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body p-5">
	      <form id="sendsms" action="">
	      	  <input type="hidden" name="group" value="<%= info._id %>">
			  <div class="form-group">
			  	<label for="sendto">Send To:</label>
				<select class="form-control require" name="receiver" id="sendto">
					<option selected disabled>~Select Receiver~</option>
					<option value="allmember">All Members</option>
					<option value="leaders">Group Leaders</option>
				</select>
			  </div>
			  <div class="form-group">
			    <label for="msg">Message:</label>
			    <textarea class="form-control require" name="msg" id="msg" cols="10" rows="5"></textarea>
			  </div>
			  <button type="submit" id="sendbtn" class="btn btn-primary pull-right">Send</button>
			</form>
	      </div>
	    </div>
	</div>
</div> 
