<% include ../../partials/header %>
<div class="wrapper">
<% include ../../partials/sidebar %>
<div class="main-panel">
	<div class="panel-hedding">
        <div class="mb-4">
            <a href="/admin/group/list"><i class="fa fa-arrow-left mr-2"></i>Group Lists</a>
        </div>
        <div class="d-flex align-items-center justify-content-between mb-4">
            <div>
                <h1><%= info.group_name %></h1>
            </div>
        </div>
    </div>
    <% if (successFlashMessage) { -%>
    <div class="alert alert-success new2 p-4">
       <i class="fa fa-check-circle" aria-hidden="true"></i>
       <span class="alert-body">
         <h6 class="alert-header">Success</h6>
         <p class="mb-0"><%= successFlashMessage %></p>
       </span>
    </div>
    <% } -%> 
	<div class="tab tab-outline">
		<ul class="nav" id="myTab-02" role="tablist">
			<li class="nav-item">
			    <a class="nav-link active" id="home-tab-02" data-toggle="tab" href="#home-02" role="tab" aria-controls="home" aria-selected="true">
			    	Group Details</a>
			</li> 
			<li class="nav-item">
			   <a class="nav-link" id="contact-tab-03" data-toggle="tab" href="#contact-02" role="tab" aria-controls="contact" aria-selected="false">
			      Edit Group</a>
			</li>
		</ul>
		<div class="tab-content" id="myTabContent-02">
		  <div class="tab-pane fade show active" id="home-02" role="tabpanel" aria-labelledby="home-tab-02">
		  		<!-- group id -->
		  		<div class="mb-4">
		  			<button type="button" class="btn btn-primary btn-sm btn-icon" data-tips="tooltip" data-placement="top" title="Add member" data-target="#addgroupmenber" data-toggle="modal"><i class="fa fa-user-plus"></i></button>
		  			<button type="button" class="btn btn-primary btn-icon btn-sm" data-tips="tooltip" data-placement="top" title="Send message" data-target="#sms-modal" data-toggle="modal"><i class="fa fa-envelope"></i></button>
		  		</div>
		  		<% if (info.group_desc)  { -%>
			  		<div class="card">
			  			<div class="card-body">
			  				<div><%= info.group_desc %></div>
			  			</div>
			  		</div>
		  		<% } -%>
                <!-- Group -->
                <div class="card" id="result_card">
                    <div class="card-body">
                        	<div>
                        		<div class="d-flex justify-content-between align-items-center">
	                        		<h6 style="font-weight: 900;">Group Leader(s):
		                        		<span data-tips="tooltip" data-placement="top" title="Add leader" class="ml-2" style="font-size: 12px; font-weight: normal;"><a href="#" data-toggle="modal" data-target="#exampleModal-02"><i class="fa fa-user-plus"></i></a></span>
	                        	    </h6>
	                        	    <h6 class="mr-2" style="font-weight: 900;">Total Member:<span class="ml-2"><%= members.length %></span></h6>
                        	    </div>
                        	    <% if (info.leaders.length) { -%>
                        	    <div>
				                	<p>Current Leader(s)</p>
									<% for (var i = 0; i < info.leaders.length; i++) { -%>
				            		<span class="badge badge-light mb-2 mr-2" style="font-size: 16px; font-weight: normal;">
				            				<%= info.leaders[i].firstname %> 
				            				<%= info.leaders[i].middlename %>
				            				<%= info.leaders[i].lastname %>
				            			<!-- </a> -->
			            				<span class="remove border-radius" data-id="<%= info.leaders[i]._id %>">
			            					<i class="fa fa-times"></i>
			            				</span>
								    </span>
					                <% } -%>
								</div>
                        	    <% } else { -%>
				                	<p>
				                		<span class="ml-2" style="font-size: 12px; font-weight: normal;"><a href="#" data-toggle="modal" data-target="#exampleModal-02">Please select group leader</a></span>
				                	</p>
                        	    <% } -%>
                        	    <!-- <h6 style="font-weight: 900;">Group schedule:<span class="ml-2" style=" font-weight: normal; font-size: 12px;">(<a href="#" data-toggle="modal" data-target="#exampleModal">View</a>)</span></h6> -->
                        	</div>
                        	<div>
                        	</div>
                            <div class="search_table">
                                <input type="text" class="form-control" id="filter_table" placeholder="search...">
                                <i class="fa fa-search"></i>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-centered table-hover mb-0 table-striped table_wrapper">
                                    <thead>
                                        <tr>
                                            <th scope="col">Name </th>
                                            <th scope="col">Gender</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Phone number</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       <% for (let i = 0; i < members.length; i++) { -%>
                                	 	 <tr>
                                	 	 	<td>
                                	 	 		<a class="d-flex align-items-center" href="/admin/member/member_profile/<%= members[i]._id%>">
								                <div class="avatar avatar-sm bg-primary mr-3 user-initial-sm">
								                    <span class="avatar-name"><%= members[i].initial %></span>
								                 </div>
								                 <span>
								                 	<%= members[i].firstname %> <%= members[i].middlename %> <%= members[i].lastname %></span>
								                </a>
                                	 	 	</td>
                                	 	 	<td><%= members[i].gender%></td>
                                	 	 	<td>
												<% if ( members[i].contact.primaryemail) { %>
													<%= members[i].contact.primaryemail%>
													<% } else { %>
													 N/A
												<% } %>
											</td>
                                	 	 	<td><%= members[i].contact.primarynumber%></td>
                                	 	 	<td><a href="javascript:void()" class="delete action-icon text-center pull-right" data-id="<%= members[i]._id %>" onclick="return confirm('Are you sure you want to delete this account?')"><i class="fa fa-times"></i></a></td>
                                	 	 </tr>
                                    	<% } -%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                </div>
		  </div>
		   <div class="tab-pane fade" id="contact-02" role="tabpanel" aria-labelledby="contact-tab-02">
			  	<div class="card">
					<div class="card-body">
					 <form id="group" action="/admin/group/update_group" method="POST">
						<div class="row">
							<div class="col-md-6">
								<input type="hidden" name="group_id" id="group_id" value="<%= info._id%>">
								<div class="form-group">
									<label for="groupname" class="mb-3">Name<span class="text-danger">*</span></label>
									<input type="text" class="form-control require" id="groupname" name="groupname" value="<%= info.group_name %>">
									<span class="error"></span>
								</div>
								<div class="form-row">
									<div class="form-group col-12" name="mee">
										<label for="meetingday">Meeting Day</label>
										<select class="form-control select" id="meetingday" name="meetingdays" multiple="multiple"> 
											<option value="monday">Monday</option>
											<option value="tuesday">Tuesday</option>
											<option value="wednesday">Wednesday</option>
											<option value="thursday">Thursday</option>
											<option value="friday">Friday</option>
											<option value="saturday">Saturday</option>
											<option value="sunday">Sunday</option>
										</select>
									</div>
								</div>
								<% if (info.meeting_days) { -%>
								<div class="current-leaders mb-3">
									<p class="title">Current Meeting Days</p>
						      		<% for (var i = 0; i < info.meeting_days.length; i++) { -%>
				            			<span class="badge badge-light" style="font-size:17px;">
											<%= info.meeting_days[i]%>
				            				<span class="remove-day" data-id="<%= info.meeting_days[i] %>">
				            					<i class="fa fa-times"></i>
				            				</span>
				            			</span>
						             <% } -%>
								 </div>
								<% } -%>
						       <div class="form-row">
									<div class="form-group col-12">
										<label for="meetingtime">Time</label>
										<input type="text" class="form-control" name="meetingtime" id="meetingtime" value="<%=info.meeting_time %>">
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="groupdesc">Description</label>
									<textarea class="form-control" name="groupdesc" cols="3" rows="3">
										<%= info.group_desc %>
									</textarea>
								</div>
							</div>
						</div>
						<div>
							<button type="submit" class="btn btn-primary">Save</button>
						</div>
					</form>
					</div>
				</div>
		    </div><!-- edit group  --> 
		</div>
	</div>
</div>
