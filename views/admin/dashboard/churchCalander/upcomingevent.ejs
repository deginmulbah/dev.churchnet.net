<!-- **********  main-panel  ********** -->
<% include ../../partials/header %>
<div class="wrapper">
<% include ../../partials/sidebar %>
    <div class="main-panel">
        <div class="panel-hedding">
            <div class="mb-4">
                <!-- <a href="/admin/group/list"><i class="fa fa-arrow-left mr-2"></i>Groups</a> -->
            </div>
            <div class="row mb-4">
                <div class="col-md-6">
                    <h1><%= pageTitle %> </h1>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                <div class="m-3">
                    <% if (successFlashMessage) { -%>
                    <div class="alert alert-success new2 p-4">
                       <i class="fa fa-check-circle" aria-hidden="true"></i>
                       <span class="alert-body">
                         <h6 class="alert-header">Success</h6>
                         <p class="mb-0"><%= successFlashMessage %></p>
                       </span>
                    </div>
                <% } -%> 
                </div>
                  <div class="card-body">
                    <form action="/admin/calander/addEvent" method="POST" id="event"> 
                        <div class="form-group">
                            <label for="event-title">Title</label>
                            <input type="text" class="form-control" id="event-title" name="title">
                            <span class="error"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-6">
                                <label for="start-date">Start Date</label>
                                <input type="text" class="form-control date-picker" id="start-date" name="startdate">
                                <span class="error"></span>
                            </div>
                            <div class="form-group col-6">
                                <label for="end-date">End Date</label>
                                <input type="text" class="form-control date-picker" id="end-date" name="enddate">
                                <span class="error"></span>
                            </div>
                        </div>
                        <div class="custom-control custom-checkbox mt-2 mb-2">
                            <input type="checkbox" class="custom-control-input" id="customCheck12" name="reminder" value="1">
                            <label class="custom-control-label" for="customCheck12">Set Event Reminder</label>
                        </div>
                        <div class="form-group">
                            <label for="event-desc">Description</label>
                            <textarea name="eventdesc" class="form-control" id="event-desc" id="event-desc"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Save</button>
                    </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-title">
                        <div class="card-title-left">
                            <h4 class="card-title-text">Upcomming Events</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (event.length) { %>
                            <div class="search_table">
                                <input type="text" class="form-control filter_table" id="filter_table" placeholder="search...">
                                <i class="fa fa-search"></i>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-centered table-hover mb-1 table_wrapper" id="event-table">
                                    <thead>
                                    <tr>
                                        <th scope="col">Event </th>
                                        <th scope="col">Starts</th>
                                        <th scope="col">Ends</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <% for (var i = 0; i < event.length; i++) { -%>
                                            <tr>
                                                <td><span data-toggle="popover" title="<%= event[i].title %>" data-content="<%= event[i].eventdesc %>"><%= event[i].title %></span></td>   
                                                <td><%= moment(event[i].startDate).format('l')%></td>
                                                <td><%= moment(event[i].endDate).format('l') %></td>
                                                <td>
                                                    <% if (moment(new Date().now) > moment(event[i].endDate)) { %>
                                                        <span class="badge badge-danger">completed</span>
                                                        <% } else if (moment(event[i].startDate).format('ll') === moment(new Date().now).format('ll') && moment(new Date().now) < moment(event[i].endDate)) { %>
                                                            <span class="badge badge-dark">ongoing</span>
                                                         <% } else { %>
                                                            <span class="badge badge-success">pending...</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/calander/editevent/<%= event[i]._id %>"><i class="fa fa-edit"></i></a>
                                                    <a href="/admin/calander/delete_event/<%= event[i]._id %>"><i class="fa fa-times"></i></a>
                                                </td>
                                            </tr>
                                        <% } -%>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center">
                                <p>No Upcomming Event</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% include ../../partials/footer %>
<script src="/js/moment.min.js"></script>
<!-- data table -->
<script type="text/javascript" src="/js/datatables/datatables.min.js"></script>
<script type="text/javascript" src="/js/datatables/dataTables.buttons.min.js"></script>
<script src="/js/view_script/general_compoent.js"></script>
<script src="/js/view_script/custom_validation.js"></script>
<script src="/js/toastr/toastr.min.js"></script>
<script src="/js/view_script/addEvent.js"></script>